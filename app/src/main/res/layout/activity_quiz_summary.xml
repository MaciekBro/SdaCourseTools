<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.rent.sdacoursetools.Quiz.QuizSummary">

    <TextView
        android:layout_gravity="center"
        android:padding="10dp"
        android:textSize="24dp"
        tools:text="Pierwszt tekst"
        android:id="@+id/result_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:textSize="24dp"
        android:padding="10dp"
        tools:text="Drugi tekst"
        android:id="@+id/result_not_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/try_again_button"
        android:layout_gravity="center"
        android:text="Zagraj jeszcze raz!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
